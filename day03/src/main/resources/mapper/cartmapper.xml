<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org/DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="edu.sunmoon.app.repository.CartRepository">

    <select id="selectOne" parameterType="Integer" resultType="CartDTO">
        SELECT * FROM cart WHERE cart_id=#{cartId}
    </select>
    <select id="select" resultType="CartDTO">
        SELECT * FROM cart
    </select>
    <select id="selectByCustomerId" parameterType="String" resultType="CartDTO">
        SELECT * FROM cart WHERE customer_id=#{customerId}
    </select>
    <insert id="insert" parameterType="CartDTO">
        INSERT INTO cart
        VALUES (#{cartId}, #{customerId}, #{itemId}, #{quantity}, NOW(), NOW())
    </insert>
    <update id="update" parameterType="CartDTO">
        UPDATE cart
        SET quantity=#{quantity},
            update_date=NOW()
        WHERE cart_id = #{cartId}
    </update>
    <delete id="delete" parameterType="Integer">
        DELETE FROM cart WHERE cart_id=#{cartId}
    </delete>

</mapper>