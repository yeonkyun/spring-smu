<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org/DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="edu.sunmoon.app.repository.CartRepository">



    <select id="selectOne" parameterType="Integer" resultType="CartDTO">
        SELECT * FROM cart WHERE cart_id=#{cartId}
    </select>
    <resultMap id="cartResultMap" type="CartDTO">
        <id property="cartId" column="cart_id"/>
        <result property="customerId" column="customer_id"/>
        <result property="itemId" column="item_id"/>
        <result property="quantity" column="quantity"/>
        <result property="regDate" column="creg_date"/>
        <association property="item" javaType="ItemDTO">
            <result property="itemId" column="item_id"/>
            <result property="itemName" column="item_name"/>
            <result property="itemPrice" column="item_price"/>
            <result property="imgName" column="img_name"/>
            <result property="regDate" column="ireg_date"/>
            <result property="updateDate" column="iupdate_date"/>
        </association>
    </resultMap>
    <select id="select" resultMap="cartResultMap">
        select cart_id, customer_id, c.item_id, stock, c.reg_date as creg_date,
               item_name, item_price, img_name, i.reg_date as ireg_date, update_date as iupdate_date
        from cart c
                 inner join item i on c.item_id = i.item_id
    </select>
    <select id="selectByCustomerId" parameterType="String" resultType="CartDTO">
        SELECT * FROM cart WHERE customer_id=#{customerId}
    </select>
    <insert id="insert" parameterType="CartDTO">
        INSERT INTO cart
        VALUES (#{cartId}, #{customerId}, #{itemId}, #{quantity}, NOW(), NOW())
    </insert>
    <update id="update" parameterType="CartDTO">
        UPDATE cart
        SET quantity=#{quantity},
            update_date=NOW()
        WHERE cart_id = #{cartId}
    </update>
    <delete id="delete" parameterType="Integer">
        DELETE FROM cart WHERE cart_id=#{cartId}
    </delete>

</mapper>